

<div id="calendar">
  <h2 id="month">
    <%= link_to "<", :month => (@month_from.beginning_of_month-1).strftime("%Y-%m") %>
    <%=h @month_from.strftime("%B %Y") %>
    <%= link_to ">", :month => (@month_from.end_of_month+1).strftime("%Y-%m") %>
  </h2>
  <% calendar_for @test, :year => @month_from.year, :month => @month_from.month do |calendar| %>
    <%= calendar.head('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday') %>
    <% calendar.day(:day_method => :published_on) do |date, articles| %>
      <%= date.day %>
      <ul>
        <% for test in tests %>
          <li><%= link_to h(message.name), message %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>


